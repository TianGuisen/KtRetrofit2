<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titleHeight"
    app:contentInsetStart="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleHeight"
        android:elevation="5pt">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30pt"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="20pt"
            android:src="@drawable/iv_back"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/b333"
            android:textSize="56pt"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="700pt"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35pt"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="20pt"
            android:src="@drawable/goto_right"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35pt"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="20pt"
            android:textColor="@color/b333"
            android:textSize="44pt"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:layout_alignParentBottom="true"
            android:background="@color/eee"/>
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>
